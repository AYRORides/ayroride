# Enable rewrite engine
RewriteEngine On

# Serve static files from public folder directly
RewriteCond %{REQUEST_URI} ^/(images|assets)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/public/%1/%2 -f
RewriteRule ^(images|assets)/(.*)$ /public/$1/$2 [L]

# Serve root-level public files (like logos)
RewriteCond %{REQUEST_URI} ^/([^/]+\.(png|jpg|jpeg|gif|svg|ico|webp))$
RewriteCond %{DOCUMENT_ROOT}/public/%1 -f
RewriteRule ^([^/]+\.(png|jpg|jpeg|gif|svg|ico|webp))$ /public/$1 [L]
